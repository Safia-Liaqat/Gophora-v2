{
  "functions": {
    "source": "functions",
    "runtime": "python312",
    "api_server": {
      "availableMemoryMb": 512,
      "timeoutSeconds": 300 
    }
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
